<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:fitsSystemWindows="true"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/product_detail_image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_20sdp"
            />

        <TextView
            android:id="@+id/product_detail_text"
            style="@style/text_18"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            />


        <TextView
            android:id="@+id/product_detail_price"
            style="@style/text_18"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            />


        <TextView
            android:id="@+id/product_detail_description"
            style="@style/text_18"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/product_detail_wishlist"
                android:src="@drawable/wishlist_empty"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"/>

            <ImageView
                android:id="@+id/product_detail_cart"
                android:src="@drawable/cart"
                android:padding="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>

            <LinearLayout
                android:id="@+id/product_detail_cart_layout"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/product_detail_qty_substract"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/substract"/>

                <TextView
                    android:id="@+id/product_detail_cart_qty"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    style="@style/text_18"/>

                <ImageView
                    android:id="@+id/product_detail_qty_add"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/add"/>


            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/pay_now"
            style="@style/button_20"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="PAYNOW"
            android:background="@drawable/custom_button"
            app:backgroundTint="@null"
            android:layout_marginBottom="@dimen/_40sdp"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>